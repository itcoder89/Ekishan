<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/defoult_img1"
                app:civ_border_color="@color/black"
                app:civ_border_overlay="true"
                app:civ_border_width="2sp"></de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/name"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"
                    android:paddingLeft="@dimen/_5sdp"
                    android:enabled="false"
                    android:backgroundTint="@color/color_white"></EditText>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="10dp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"
                    android:paddingLeft="@dimen/_5sdp"
                    android:enabled="false"
                    android:backgroundTint="@color/color_white"></EditText>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="10dp"
                android:text="@string/phone_no"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp">

                <EditText
                    android:id="@+id/phone_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"
                    android:paddingLeft="@dimen/_5sdp"
                    android:enabled="false"
                    android:backgroundTint="@color/color_white"></EditText>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="10dp"
                android:text="@string/addhar_no"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp">

                <EditText
                    android:id="@+id/company_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_5sdp"
                    android:enabled="false"
                    android:background="@color/color_white"
                    android:backgroundTint="@color/color_white"></EditText>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="10dp"
                android:text="@string/zip_code"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp">

                <EditText
                    android:id="@+id/zip_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"
                    android:paddingLeft="@dimen/_5sdp"
                    android:inputType="number"
                    android:enabled="true"
                    android:maxLength="6"
                    android:backgroundTint="@color/color_white"></EditText>
            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="10dp"
                android:text="@string/address"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="@color/color_white"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp">

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/_5sdp"
                    android:gravity="start|top"
                    android:paddingTop="@dimen/_5sdp"
                    android:enabled="true"
                    android:background="@color/color_white"
                    android:backgroundTint="@color/color_white"></EditText>
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:id="@+id/rlupdate"
                android:layout_width="150dp"
                android:layout_height="40sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#B7C21C"
                android:background="@drawable/yellow_bg_wound"
                android:gravity="top"
                android:visibility="visible"
                android:paddingLeft="15sp"
                android:paddingRight="15sp">
                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="UPDATE"
                    android:textStyle="bold"
                    android:textColor="@color/color_white"
                    android:textSize="18sp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
