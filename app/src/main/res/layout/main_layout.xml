<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <include
        layout="@layout/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navi_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start|top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_launcher" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/homeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:paddingLeft="15dp"
                        android:background="@color/colorGrey"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txt_home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textSize="18dp"
                            android:text="@string/title_home"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profileLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/txt_my_prof"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textSize="18dp"
                            android:text="@string/my_profile"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/orderLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/txt_my_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textSize="18dp"
                            android:text="@string/my_order"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chatsupportLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/txt_chat_suport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textSize="18dp"
                            android:text="@string/chat_support"></TextView>
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/vandorLogin"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txt_login_for_farmer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textSize="18dp"
                            android:text="@string/login_for_farmer"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliveryLogin"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txt_login_for_delivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textSize="18dp"
                            android:text="@string/login_for_deliver"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/help"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txt_cs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textSize="18dp"
                            android:text="@string/customer_support"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/logoutLayout"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textSize="18dp"
                            android:text="@string/login"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_language"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:paddingLeft="15dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/colorGrey"
                        android:gravity="center_vertical">


                        <TextView
                            android:id="@+id/txt_lang"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:textSize="18dp"
                            android:text="Hindi"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
