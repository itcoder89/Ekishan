<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/crdmain"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
            android:id="@+id/llmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="70sp"
                android:layout_marginTop="30sp"
                android:layout_height="70sp"
                android:scaleType="centerCrop"
                android:src="@drawable/apple" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp">

                        <TextView
                            android:id="@+id/txt_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="Provider Name"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="bold"></TextView>
                        <TextView
                            android:id="@+id/description"
                             android:layout_width="wrap_content"
                            android:layout_height="30sp"
                            android:textSize="10sp"
                            android:maxLines="2"
                            android:layout_centerVertical="true"
                            android:text="Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print, graphic or web designs"
                            ></TextView>


                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:text="â‚¹120.00"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_height="wrap_content"></TextView>
                        <TextView
                            android:id="@+id/weight"
                            android:layout_width="wrap_content"
                            android:text="250 gm"
                            android:layout_toRightOf="@+id/price"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:textSize="12sp"
                            android:layout_height="wrap_content"></TextView>
                        <RelativeLayout
                            android:id="@+id/rlLogin"
                            android:layout_width="70dp"
                            android:layout_height="28sp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center"
                            android:background="@drawable/yellow_bg_wound"
                            android:paddingLeft="15sp"
                            android:paddingRight="15sp">

                            <TextView
                                android:id="@+id/tvLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="Add"
                                android:textColor="@android:color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/ll_cart"
                            android:layout_width="75dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:visibility="gone"
                            android:clickable="true"
                            android:gravity="center_vertical"
                            android:layout_centerVertical="true">

                            <TextView
                                android:id="@+id/minus"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/yellow_bg_wound"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="@color/color_white"></TextView>

                            <TextView
                                android:id="@+id/quantity"
                                android:layout_width="25dp"
                                android:gravity="center"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:text="0"></TextView>

                            <TextView
                                android:id="@+id/plus"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/yellow_bg_wound"
                                android:gravity="center"
                                android:text="+"
                                android:textColor="@color/color_white"></TextView>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:background="@drawable/green_with_top_radius"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/variety_name"
                    android:layout_width="wrap_content"
                    android:text="Desi"
                    android:paddingLeft="15sp"
                    android:paddingRight="15sp"
                    android:paddingTop="5sp"
                    android:paddingBottom="5sp"
                    android:textColor="@color/color_white"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
                <ImageView
                    android:id="@+id/favourite"
                    android:layout_width="20sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginTop="10sp"
                    android:src="@mipmap/favorite"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_height="20sp"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/outOfstock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:clickable="true"
                android:background="#99ffffff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="Out of Stock"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/red"
                    android:background="#ECECEC"/>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
